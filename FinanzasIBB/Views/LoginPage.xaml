<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanzasIBB.Views.LoginPage"
             Title="LoginPage">
    <Grid RowDefinitions=".3*,.7*">
        <Image Aspect="AspectFill" Source="finanzas.jpeg"/>
        <Grid BackgroundColor="#4F3F9b" Opacity=".6"/>
        <Grid ColumnDefinitions="*">
            <Image Aspect="AspectFit"
                   HeightRequest="140"
                   Source="logoibb.png"/>
            <Label Text="Finanzas IBB El Bosque"
                   FontSize="Title"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="White"/>
        </Grid>
        <Grid Grid.Row="1">
            <RoundRectangle Margin="-5,-30,-5,-2"
                            CornerRadius="30,30,0,0"
                            Fill="White"/>
            <VerticalStackLayout Margin="30,0,30,0">
                <Label FontAttributes="Bold"
                       FontFamily="bold"
                       FontSize="Medium"
                       Text="Bienvenido!"
                       TextColor="#2D2D2D"/>
                <Label FontFamily="medium"
                       Text="Inicia sesion para continuar"
                       TextColor="#A3A3A4"/>

                <Grid  Margin="0,30,0,0"
                       ColumnDefinitions=".2*,.8*">
                    <RoundRectangle BackgroundColor="#EDEBF6"
                            CornerRadius="10"
                            HeightRequest="60"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            WidthRequest="60"/>
                    <Image HorizontalOptions="Center">
                        <Image.Source>
                            <FontImageSource
                                FontFamily="awesomesolid"
                                Glyph="&#xf0e0;"
                                Size="44"
                                Color="#4F3F9b"/>
                        </Image.Source>
                    </Image>
                    <Entry Grid.Column="1"    
                           Placeholder="Email"
                           VerticalOptions="Center"
                           Keyboard="Email"
                           Text="rvillegasburgos@gmail.com"
                           x:Name="EntryEmail"/>
                </Grid>

                <Grid Margin="0,30,0,0"
                        ColumnDefinitions=".2*,.8*">
                    <RoundRectangle BackgroundColor="#EDEBF6"
            CornerRadius="10"
            HeightRequest="60"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            WidthRequest="60"/>
                    <Image HorizontalOptions="Center">
                        <Image.Source>
                            <FontImageSource
                FontFamily="awesomesolid"
                Glyph="&#xf084;"
                Size="44"
                Color="#4F3F9b"/>
                        </Image.Source>
                    </Image>
                    <Entry Grid.Column="1"    
                           Placeholder="ContrseÃ±a"
                           VerticalOptions="Center"
                           IsPassword="True"
                           Text="123456"
                           x:Name="EntryPass"/>
                </Grid>
                <Button Margin="0,20,0,0"
                        BackgroundColor="#4F3F9B"
                        HeightRequest="60"
                        Text="Login"
                        TextColor="#FBF6FD"
                        Clicked="ButtonLogin_Clicked"
                        x:Name="ButtonLogin"/>
                <Label Margin="0,20,0,-10"
                       HorizontalOptions="Center"
                       Text="Forgot your password?"
                       TextColor="Blue"
                       TextDecorations="Underline"/>
                <Button Margin="0,30,0,0"
                        BackgroundColor="#FBF6FD"
                        HeightRequest="60"
                        Text="Create your account"
                        TextColor="#4F3F9B"
                        x:Name="RegisterUser"
                        Clicked="RegisterUser_Clicked"/>
            </VerticalStackLayout>
            
        </Grid>
    </Grid>
</ContentPage>