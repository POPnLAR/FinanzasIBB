<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanzasIBB.Views.Gastos.EditarGastoPage"
             Title="Editar Gasto ">
    <VerticalStackLayout Padding="10">
        <Label Text="{Binding NombreGasto}"/>
        <Label Text="{Binding DetalleGasto}"/>
        <Label Text="{Binding ValorGasto, StringFormat='{0:C0}'}"/>
        <Label Text="{Binding FecVencimientoGasto, StringFormat='{0:dd/MM/yyyy}'}"/>
        <Label Text="{Binding FecPagoGasto, StringFormat='{0:dd/MM/yyyy}'}"/>
        <Label Text="{Binding TipoGasto.NombreTipoGasto}"/>
    </VerticalStackLayout>
</ContentPage>